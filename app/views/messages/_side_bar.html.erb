<div class="side-head">
  <div class="user-name">
    <%=link_to edit_user_path(current_user) do %>
      <%= current_user.name %>
    <%end%>
  </div>
  <%=link_to "チャットを作成する", new_room_path, {class:"new-chat"}%>
</div>

<div class="side-rooms">
  <div class="room">
    <% current_user.rooms.each do |room| %>
      <div class="room-name">
        <%=link_to room.name, room_messages_path(room), {class:"rn"}%>
      </div>
    <% end %>
  </div>
</div>
